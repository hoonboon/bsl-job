.panel.panel-default
  if (job.postType == 'FB')
    .panel-heading 
      h3.panel-title !{job.title}
    .panel-body.post-preview
      .text-center
        .fb-post(data-href!=job.fbPostUrl)
  else if job.customContent
    .panel-heading 
      h3.panel-title !{job.title}
    .panel-body.post-preview
      .custom-content.custom-content-raw !{job.customContent}
  else
    .panel-body
      .col-xs-4.col-xs-offset-4
        .text-center
          img.img-responsive.img-thumbnail(src!=job.publishImgUrl, alt="Post Image")
      .col-xs-12
        h3.text-center
          | !{job.title}
        h4.text-center
          | !{job.employer.name}
        h5.text-center
          | Tempat Kerja: !{job.locationDisplay}
    table.post-detail.table
      if job.description
        tr
          th
            label.control-label Keterangan
        tr
          td(align='left')
            | !{job.descriptionDisplay}
      tr
        th
          label.control-label Hubungi
      tr
        td(align='center')
          | !{job.employer.contact}
      if job.salary
        tr
          th
            label.control-label Gaji
        tr
          td(align='center')
            | !{job.salary}
      if job.empTypeDisplay
        tr
          th
            label.control-label Jenis Kerja
        tr
          td(align='center')
            | !{job.empTypeDisplay}
      if job.languageDisplay
        tr
          th
            label.control-label Bahasa
        tr
          td(align='center')
            | !{job.languageDisplay}
      if job.otherInfoDisplay
        tr
          th
            label.control-label Lain-lain
        tr
          td(align='left') 
            | !{job.otherInfoDisplay}
      if job.closing
        tr
          td(align="center")
            strong Tarikh Tutup: !{job.closing}
  .panel-footer
    if (job.postType == 'FB')
      .addthis_inline_share_toolbox(
        data-url!=job.fbPostUrl, 
        data-title!=job.title, 
        data-media!=job.publishImgUrl
      )
    else 
      .addthis_inline_share_toolbox(
        data-url!=job.publishUrl, 
        data-title!=job.title, 
        data-description!=job.highlights, 
        data-media!=job.publishImgUrl
      )
